<%= turbo_stream.replace "follow_btn_#{@artist.id}" do %>
  <%= form_with url: follows_path,
                method: :post,
                format: :turbo_stream,
                id: "follow_btn_#{@artist.id}",
                class: "d-inline" do %>
    <%= hidden_field_tag :artist_id, @artist.id %>
    <button type="submit" class="btn btn-primary text-light" title="Suivre">
      <i class="fa-regular fa-heart"></i>
    </button>
  <% end %>
<% end %>
