<% if message.user != now_user %>
  <div id="message-<%= message.id %>" class="message-from-another-container w-100">
    <small class="message-timestramp"><%= message.created_at.strftime("%H:%M") %></small>
    <div class="message-from-another <%= 'px-2 py-2' if message.message_pictures.attached? %>">
      <%= cl_image_tag message.message_pictures.first.key, class: "img-fluid rounded", style: "max-height: 200px;" if message.message_pictures.attached? %>
      <p><%= message.body %></p>
    </div>
  </div>
<% else %>
  <div id="message-<%= message.id %>" class="message-from-me-container w-100">
    <small class="message-timestramp"><%= message.created_at.strftime("%H:%M") %></small>
    <div class="message-from-me <%= 'px-2 py-2' if message.message_pictures.attached? %>">
      <%= cl_image_tag message.message_pictures.first.key, class: "img-fluid rounded", style: "max-height: 200px;" if message.message_pictures.attached? %>
      <p class="mb-0"><%= message.body %></p>
    </div>
    <small class="message-timestramp"><%= message.read ? "vue" : "envoyÃ©" %></small>
  </div>
<% end %>
