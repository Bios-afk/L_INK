<div class="header_profile_container w-100 d-flex justify-content-start align-items-start pb-4">
  <div class="header_profile_info_container rounded w-100 d-flex justify-content-start align-items-center gap-3 px-3 py-2">
    <div class="header_profile_pic h-100 d-flex justify-content-center align-items-center">
      <label for="avatar-upload" style="cursor: pointer;">
        <%= image_tag user.avatar.attached? ? url_for(user.avatar) : 'pic-profile-default.png', class: 'header-rounded-circle', alt: "#{user.pseudo} profile picture" %>
      </label>
      <%= form_with(model: current_user, url: avatar_users_path, method: :patch) do |f| %>
        <%= f.file_field :avatar, id: "avatar-upload", class: "d-none", accept: "image/*", onchange: "this.form.submit()" %>
      <% end %>
    </div>
    <div class="header_profile_info_text h-100 d-flex flex-column justify-content-center align-items-start gap-2">
      <p class="header_profile_info_bio mb-0"><%= user.bio %></p>
      <%= link_to "modifier", edit_user_path(current_user), class: "btn header_profile_bouton" %>
    </div>
  </div>
</div>
