<div class="devise-container">
  <h2 class="mb-4">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: "Adresse e-mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>

      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" } %>

      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
      <% end %>
    </div>

    <%#= recaptcha_v3(action: 'login') %>

    <div class="form-actions mt-3">
      <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
