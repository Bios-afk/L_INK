<div class="position-relative d-flex align-items-center w-100 gap-2">
  <%= form_with url: artists_path, method: :get,
      data: {
        turbo_frame: "artists_list",
        controller: "search",
        search_target: "form"
      },
      local: false,
      html: { class: "search-bar-form flex-grow-1 position-relative" } do |f| %>

    <!-- Loupe -->
    <i class="fa fa-search position-absolute top-50 start-0 translate-middle-y ms-3" style="color: #{$text-color};"></i>

    <!-- Champ recherche -->
    <%= f.text_field :query,
        placeholder: "Rechercherâ€¦",
        autocomplete: "off",
        class: "form-control ps-5 search-bar-input w-100",
        data: {
          action: "input->search#search",
          search_target: "input"
        } %>
  <% end %>

  <!-- Bouton filtre -->
  <button type="button"
          class="btn d-flex align-items-center justify-content-center search-filter-button"
          data-bs-toggle="collapse"
          data-bs-target="#filters-collapse"
          aria-expanded="false"
          aria-controls="filters-collapse">
    <i class="fa fa-sliders"></i>
  </button>

</div>
